<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_claim_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim Type :"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_claim_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Travel"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_claim_type_label"
        />

    <TextView
        android:id="@+id/tv_claim_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim Date :"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_claim_type_label"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_claim_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2020-11-03"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_claim_date_label"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_claim_date_label"
        />

    <TextView
        android:id="@+id/tv_claim_expense_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense :"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_claim_date_label"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_claim_expense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="120"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_claim_expense_label"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_claim_expense_label"
        />

</androidx.constraintlayout.widget.ConstraintLayout>